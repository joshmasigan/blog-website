<%-  include("partials/header"); -%>
    <h1>Home</h1>
    <p><%= homeContent %></p>

<% posts.forEach(post => { %>
    <div class="post">
        <h1><%= post.title %></h1>
        <% if(post.body.length > 100){ %>
            <p> <%= truncate.truncate(post.body) %>
                <a name="postId" value="<%= post._id %>" href="/posts/<%= post._id %>">Read more</a>
            </p>
            <% }else{ %>
                <p><%= post.body %></p>
            <% } %>
    </div>

<% }); %> 
<%-  include("partials/footer"); -%>