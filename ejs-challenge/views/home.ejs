<%-  include("partials/header"); -%>
    <h1>Home</h1>
    <p><%= homeContent %></p>


<% for(let i = posts.length-1; i >= 0; --i){ %>
    <h1><%= posts[i].title  %></h1>
    <% if(posts[i].content.length > 100){ %>
            <p><%= truncate.truncate(posts[i].content)  %> 
                <a href="/posts/<%= posts[i].title %>">Read more</a>
            </p>
        <% }else{ %>
            <p><%= posts[i].content %></p>
        <% } %>
<% } %>


